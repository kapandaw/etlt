extends ../layouts/default

block css
    link(href='/js/vendor/vegas/jquery.vegas.css', rel="stylesheet")
    style.
        html{
            height:100%;
            max-height:100%;
            min-height:100%;
            padding:0;
            margin:0;
        }
        #navbar-top{
            display:none;
        }
        .carousel{
            margin-bottom:15em;
        }
        .container{
            background-color: transparent;   
        }
        .top{
            height:30px;
            background-color:transparent;
        }
        #bottom{
            position: absolute !important;
            bottom:10px;
            right:10%;
            left:10%;
            width:80%;
        }
        a{
            color:rgba(0,0,0,0.7) !important;
            
            
        }
        a:hover{
            color:rgba(0,0,0,1) !important;
        }
        #navbar-main ul li a{
            font-weight:100;
            font-size:1.2em;
            color:rgba(0,0,0,0.9) !important;
        }
        #navbar-main ul li a:hover{
            color:rgba(0,0,0,1) !important;   
            background-color:#fff;
            border-color:transparent !important;
        }
        .brand .right{
            color:#000 !important;
        }
        

        .necklace{
            display:none;
        }
        body{
            font-family: Arial !important;
            font-weight:500 !important;
        }
        @media (max-width: 767px) {
            .navbar-collapse{
                background-color:#fff;
            }
        }
        @media (max-width: 480px) {
            .carousel{
                margin-bottom:5em;
            }
        }

