            }
            hr{
                border:none;
                border-top:1px solid #eee;
                margin-top:25px;
                margin-bottom:25px;
            }
            b,strong {
                font-family: 'Fira Sans', sans-serif;
                color: #000;
                font-size:1em;
                font-weight: 700;
            }
            ul {
                margin: 10px 0;
                padding: 0 0 0 40px;
            }
            img {
                border: 0;
            }
            small{
                font-size: 11px;
                font-family: 'Fira Sans', sans-serif;
                color: #ccc;
                font-weight:200;
                margin-left:60px;
            }
            small a{
                font-size: 11px;
                font-family: 'Fira Sans', sans-serif;
                color: #ccc;
                font-weight:200;
            }
            code{
                font-family: 'Fira Sans', Tahoma, sans-serif;
                font-size:12px;
                color:#000;
                padding:0px 4px;
                line-height:0.8;
                margin:0 4px 0 2px;
                border:1px solid #ddd;
                font-weight:900;

            }
            blockquote {
              font-family: 'Fira Sans';
              font-style: italic;
              font-size: 16px;
              color: #ab7960;
              margin: 5px 10px;
              margin-left:30px;
              text-align: left;
              background: #fcf9f1;
              border-left: 10px solid #ab7960;
              padding: 10px 10px;
              quotes: "\201C""\201D";
            }
            blockquote:before {
              color: #ab7960;
              content: open-quote;
              font-size: 46px;
              font-style:none !important;
              font-family:Arial, Tahoma, sans-serif;
              line-height: 0.1em;
              margin-right: 0.25em;
              vertical-align: -0.4em;
            }
            blockquote p {
              display: inline;
            } 
            ul.total{
                font-size: 14px;
                font-family: 'Fira Sans', sans-serif;
                color: #000;
                list-style:none;
                text-align:justify;
                right:0;
            }
            ul.total li{
                text-align:right;
            }
            ul.hor{
                font-size: 14px;
                font-family: 'Fira Sans', sans-serif;
                color: #000;
                display: inline;
                list-style:none;
            }
            ul.hor li{
                display: inline;
                margin-left: 20px;
            }
            span.right{
                font-size: 14px;
                font-family: 'Fira Sans', sans-serif;
                color: #000;
                width:100px;
                text-align:right;
                margin-left:20px;
            }
            span.left{
                font-size: 14px;
                font-family: 'Fira Sans', sans-serif;
                color: #000;
                width:80px;
                text-align:left;
            }
            p.lead{
                margin: 40px 0 5px 0;
            } 
            table {
                border-spacing: 0;
                border-collapse: collapse;
                width:100%;
                background-color:#fff;
                font-family: 'Fira Sans';
                  font-size: 13px;
                  color: #000;
            }
            table thead{
                background-color:#fcf9f1 !important;
            }
            table, table tr th, table tr, table tr td{
                border-color:#f5e6dc !important;
            }
            .pure-table {
                empty-cells: show;
                border-spacing: 0;
                border-collapse: collapse;
                border: 1px solid #cbcbcb;
            }
            .pure-table td,
            .pure-table th {
                font-size: inherit;
                overflow: visible;
                margin: 0;
                padding: .5em 1em;
                border-width: 0 0 0 1px;
                border-left: 1px solid #cbcbcb;
            }
            .pure-table td:first-child,
            .pure-table th:first-child {
                border-left-width: 0;
            }
            .pure-table thead {
                text-align: left;
                vertical-align: bottom;
                color: #000;
                background: #e0e0e0;
            }
            .pure-table td {
                background-color: transparent;
            }
            .no-margin{
                margin:0;
                padding:0;
            }
            .center{
                text-align:center !important;
            }
            .left{
                text-align:left !important;
            }
            .right{
                text-align:right !important;
            }
            .justify{
                text-align:justify !important;
            }
            .comment{
                text-align:left;
                font-size: 16px;
                font-family: 'Fira Sans', sans-serif;
                color: #000;
                font-style:italic;
                background: #fcf9f1;
                border-left: 10px solid #ab7960;
                padding: 10px 10px;
                width:60%;
            }
            #body{
                background:#fffcfc;
            }
            #content-body{
                background-color:#fff;
                padding:15px 30px;
                border: 1px solid #e0d9cd;
                min-width:320px;
                max-width:760px;
                margin:15px auto;
                
            }
            #content{
                text-align:center;
                background-color:#fff;
                padding:15px 30px;
            }
            #menu{
                padding:20px 0;
                text-align:center;
            }
            #menu a{
                font-family: 'Fira Sans', sans-serif;
                font-size:1em;
                color:#cb8b65;
                font-weight:200;
            }
            #menu a:hover{
                font-family: 'Fira Sans', sans-serif;
                font-size:1em;
                font-weight:200;   
                color:#925c40;
            }
            .body-padding{
                padding:150px 0;
            }
            .l-box {
                padding: 1em;
            }
            .brand-logo{
                background-color: #fff;
                background-size:100%;
                width:250px;
                height:250px;
                text-align:center;
                margin:0 auto 0 auto;
            }
            .brand{
                padding: 3px 25px 9px 5px;
                text-decoration: none !important;
            }
            .brand .left, .brand .right{
                text-align: center;
                padding:0 10px;
            }
            .brand .left{
                font-size: 46px;
                font-weight: bold;
                color:#ffc437;
                line-height: 1;
                padding: 1px 2px 1px 1px;
                letter-spacing: -4px;
            }
            .brand .right{
                font-size: 16px;
                font-weight: 500;
                color:#ddd !important;
                letter-spacing: 2.5px;
                margin-top: -14px;
                margin-left: 4px;
                text-transform:uppercase;
            }
            .lead{
                font-size:1.3em;
            }
            .bold{
                font-weight:900;
            }
            .mutted{
                color:rgba(0,0,0,0.45);
                font-weight:400;
            }
            .margin-left{
                margin-left:20px;
            }
            .account{
                margin:10px 0;
                text-align:left;
                padding: 10px 30px;
                width:350px;
                border-left:1px solid #ddd;
            }
            .account .row{
                margin:0px;
                text-align:left;
                padding: 0px;
            }
            

